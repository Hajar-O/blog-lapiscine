{% extends 'admin/base.admin.html.twig' %}
{% block content %}

    <section>
        <table class="listAdmin">
            <tr>
                <td>Id</td>
                <td>Image</td>
                <td>Titre</td>
                <td>Date</td>
                <td>Est publi√© ?</td>
            </tr>
        {% for article in articles %}


                <tr>
                    <td>{{ article.id }}</td>
                    <td>
                        <div class="pic" >
                            <img src="{{ article.image }}" alt="">
                        </div>
                    </td>
                    <td><h2>{{ article.title }}</h2></td>
                    <td>{{ article.createdAt | date('d/m/y') }}</td>
                    <td><p>{{ article.isPublished }}</p></td>
                    <td><a href="{{ path('admin_update_article',{ id:article.id }) }}">UPDATE</a></td>
                    <td><a href="{{ path('admin_delete_article',{ id:article.id }) }}">Supprimer</a></td>


                </tr>




        {% endfor %}
        </table>
    </section>

{% endblock %}